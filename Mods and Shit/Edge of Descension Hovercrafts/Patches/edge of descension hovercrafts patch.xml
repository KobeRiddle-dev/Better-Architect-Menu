<?xml version="1.0" encoding="utf-8"?>
<Patch>
	
<!-- GROUND TRANSPORT -->
	
	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/Vehicles.VehicleBuildDef[defName="HovercarBlueprint"]/designationCategory</xpath>
		<value>
			<designationCategory>Ferny_GroundTransport</designationCategory>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/Vehicles.VehicleBuildDef[defName="HovertruckBlueprint"]/designationCategory</xpath>
		<value>
			<designationCategory>Ferny_GroundTransport</designationCategory>
		</value>
	</Operation>
	
<!-- MILITARY TRANSPORT -->

	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/Vehicles.VehicleBuildDef[defName="HovertankBlueprint"]/designationCategory</xpath>
		<value>
			<designationCategory>Ferny_MilitaryTransport</designationCategory>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/Vehicles.VehicleBuildDef[defName="ArmoredHovertruckBlueprint"]/designationCategory</xpath>
		<value>
			<designationCategory>Ferny_MilitaryTransport</designationCategory>
		</value>
	</Operation>
	
</Patch>