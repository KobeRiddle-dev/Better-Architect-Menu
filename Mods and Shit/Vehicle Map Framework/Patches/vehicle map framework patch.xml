<!-- ORBIT -->
  
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/ThingDef[@Name="VMF_GravshipWheelBase"]</xpath>
		<match Class="PatchOperationSequence">
			<operations>
				
				<li Class="PatchOperationReplace">
					<success>Always</success>
					<xpath>Defs/ThingDef[@Name="VMF_GravshipWheelBase"]/designationCategory</xpath>
					<value>
						<designationCategory>Odyssey</designationCategory>
					</value>
				</li>

				<li Class="PatchOperationRemove">
					<success>Always</success>
					<xpath>Defs/ThingDef[@Name="VMF_GravshipWheelBase"]/designatorDropdown</xpath>
				</li>
				
			</operations>
		</match>
	</Operation>

</Patch>