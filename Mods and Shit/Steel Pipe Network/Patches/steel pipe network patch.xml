<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/DesignationCategoryDef[defName="VCHE_PipeNetworks"]</xpath>
		<match Class="PatchOperationAddModExtension">
			<success>Always</success>
			<xpath>Defs/DesignationCategoryDef[defName="Ferny_SteelNetwork"]</xpath>
			<value>
				<li Class="BetterArchitect.NestedCategoryExtension">
					<parentCategory>VCHE_PipeNetworks</parentCategory>
				</li>
			</value>
		</match>
	</Operation>
	
<!-- STEEL -->

	<!-- Networks -->
	
	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/PipeSystem.PipeNetDef[defName="NBNW_SteelNet"]/designator/designationCategoryDef</xpath>
		<value>
			<designationCategoryDef>Ferny_SteelNetwork</designationCategoryDef>
		</value>
	</Operation>

	<!-- Buildings -->

	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="NBNW_SteelPipe"]/designationCategory</xpath>
		<value>
			<designationCategory>Ferny_SteelNetwork</designationCategory>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="NBNW_UndergroundSteelPipe"]/designationCategory</xpath>
		<value>
			<designationCategory>Ferny_SteelNetwork</designationCategory>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="NBNW_SteelValve"]/designationCategory</xpath>
		<value>
			<designationCategory>Ferny_SteelNetwork</designationCategory>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="NBNW_SteelTank"]/designationCategory</xpath>
		<value>
			<designationCategory>Ferny_SteelNetwork</designationCategory>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="NBNW_SteelTap"]/designationCategory</xpath>
		<value>
			<designationCategory>Ferny_SteelNetwork</designationCategory>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="NBNW_SteelDrain"]/designationCategory</xpath>
		<value>
			<designationCategory>Ferny_SteelNetwork</designationCategory>
		</value>
	</Operation>

</Patch>
