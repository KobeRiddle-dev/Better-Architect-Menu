<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/DesignationCategoryDef[defName="CGF1_MWP_Category_GunsGalore"]</xpath>
		<value>
			<li Class="BetterArchitect.NestedCategoryExtension">
				<parentCategory>Security</parentCategory>
			</li>
		</value>
	</Operation>
	
<!-- WEAPONS -->

	<Operation Class="PatchOperationConditional">
		<xpath>Defs/ThingDef[designationCategory="CGF1_MWP_Category_GunsGalore"]/designationCategory</xpath>
		<match Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[designationCategory="CGF1_MWP_Category_GunsGalore"]/designationCategory</xpath>
			<value>
				<designationCategory>Ferny_Weapons</designationCategory>
			</value>
		</match>
	</Operation>
	
<!-- PRODUCTION -->
	
	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="CGF1_MWP_Building_Gunsmith_Old"]/designationCategory</xpath>
		<value>
			<designationCategory>Ferny_Production</designationCategory>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="CGF1_MWP_Building_Gunsmith"]/designationCategory</xpath>
		<value>
			<designationCategory>Ferny_Production</designationCategory>
		</value>
	</Operation>
	
</Patch>
