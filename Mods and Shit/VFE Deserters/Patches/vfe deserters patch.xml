<?xml version="1.0" encoding="utf-8" ?>
<Patch>   
<!-- WEAPONS -->
                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[@Name="VFED_ImperialTurretBase"]/designationCategory</xpath>
                    <value>
                        <designationCategory>Ferny_Weapons</designationCategory>
                    </value>
                </Operation>

<!-- TRAPS --> <!-- Moved to Traps to avoid Weapons bloat; little distinction with modded traps. -->
                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[@Name="VFED_RemoteChargeBase"]/designationCategory</xpath>
                    <value>
                        <designationCategory>Ferny_Traps</designationCategory>
                    </value>
                </Operation>

<!-- AMMUNITION -->
                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[@Name="VFED_AmmoBoxBase"]/designationCategory</xpath>
                    <value>
                        <designationCategory>Ferny_AmmunitionNetwork</designationCategory>
                    </value>
                </Operation>

<!-- OUTREACH -->
                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[defName="VFED_BurnoutIntelScraper"]/designationCategory</xpath>
                    <value>
                        <designationCategory>Ferny_Summon</designationCategory>
                    </value>
                </Operation>
</Patch>