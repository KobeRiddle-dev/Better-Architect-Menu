<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <!-- Anima Obelisk by default is placed into "Misc" -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/DesignationCategoryDef[defName="Ideology"]</xpath>
        <match Class="PatchOperationReplace">
            <success>Always</success>
            <xpath>Defs/ThingDef[defName="AnimaObelisk"]/designationCategory</xpath>
            <value>
                <designationCategory>Ideology</designationCategory>
            </value>
        </match>
    </Operation>
</Patch>
